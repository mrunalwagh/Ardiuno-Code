   //pins// LDR= 7, LDR RELAY= 6, PIR= 5, PIR RELAY= 4, MQ6= A0, MQR LED= 3, BUZZER= 2 

   

   //-----------------------------------------------------------------------------start---------------------------------------------------------------------------

   #include <LiquidCrystal.h>

   LiquidCrystal lcd(13,12,11,10,9,8);

   

   #define buzzerPin 2

   #define MQ3LED 3

   #define gasPin A0               // MQ6 pinss

  

   int ledPin = 4;                 // choose the pin for the LED pir

   int inputPin = 5;               // choose the input pin (for PIR sensor)

   int pirState = LOW;             // we start, assuming no motion detected

   int val = 0;

   

   int ledLDRPin = 6;              // choose the pin for the LED LDR

   int LDRPin = 7;                 // choose the input pin (for LDR sensor)

   int LDRState = LOW;             

   int val1 = 0;

   //------------------------------------------------------------------------------setup----------------------------------------------------------------------------

   

   void setup() 

   {

   Serial.begin(9600);

   lcd.begin(16, 2); 

   pinMode(buzzerPin,OUTPUT);

   pinMode(MQ3LED,OUTPUT);

   pinMode(ledPin, OUTPUT);      

   pinMode(inputPin, INPUT);

   pinMode(ledLDRPin, OUTPUT);      

   pinMode(LDRPin, INPUT);

   //digitalWrite(ledPin, LOW);

   //digitalWrite(ledLDRPin, LOW);

   

  

   lcd.setCursor(0, 0);

   lcd.print("Calibrating");

    Serial.println("Calibrating");

   for(int i = 0; i <10; i++)

   {

      if (i==4)

      {

         lcd.setCursor(0, 1);

         lcd.print(".");

        }

       else  lcd.print(".");

      delay(500);

      }

    lcd.setCursor(5, 1);

    lcd.print("done");

    delay(1000);

    lcd.clear(); 

    lcd.setCursor(1, 0);

    lcd.print("SENSOR ACTIVE");

    Serial.println("SENSOR ACTIVE");

    

    delay(1500);

    lcd.clear();

    }

    //--------------------------------------------------------------------------loop 1 lpg-----------------------------------------------------------------------------

    void loop()

    {

    int gasSensor = analogRead(gasPin);

    if (gasSensor > 770)

    {

    digitalWrite(buzzerPin,HIGH);

    digitalWrite(MQ3LED,HIGH);

    delay(4000);

    

    lcd.setCursor(0, 0);

    lcd.print("Value : ");

    lcd.print(gasSensor);

    Serial.print(gasSensor);

    Serial.print("\t");

    lcd.setCursor(0, 1);

    Serial.println("LPG Gas Detected");   

    lcd.print("LPG Gas Detected");  

    delay(300); 

    lcd.clear();

      }

      

    else 

        {

    digitalWrite(buzzerPin,LOW);

    digitalWrite(MQ3LED,LOW);

    lcd.setCursor(0, 0);

    lcd.print("Value : ");

    lcd.print(gasSensor);

    Serial.print(gasSensor);

    Serial.print("\t");

    lcd.setCursor(0, 1);

    Serial.println("You Are Safe"); 

    lcd.print("You Are Safe");   

    delay(300);

    void Pir();

    

    }

                          

  

    

    

//-------------------------------------------------------------------------------loop 2 PIR-------------------------------------------------------

  Serial.println("LOOP PIR");

  val = digitalRead(inputPin);  // read input value

  if (val == HIGH) {            // check if the input is HIGH

  digitalWrite(ledPin, HIGH);   // turn LED ON

  delay(200);

  

  if (pirState == LOW) {

  Serial.println("Motion detected!");

  pirState = HIGH;

  Serial.println("LOOP DETECTED");

  }

  }

  

  else 

  {

  digitalWrite(ledPin, LOW); // turn LED OFF

  if (pirState == HIGH){

  Serial.println("Motion ended!");

  Serial.println("LOOP NOT DETECTED");

  pirState = LOW;

  }

  }

                          //FUN CALL LDR

  

 //------------------------------------------------------------------------------loop 3 LDR-------------------------------------------------------

  Serial.println("LOOP LDR");

  val1 = digitalRead(LDRPin);    // read input value

  if (val1 == HIGH) {            // check if the input is HIGH

  digitalWrite(ledLDRPin, HIGH);   // turn LED ON

  delay(200);

  if (LDRState == LOW) {

  Serial.println("Night Light ON");

  LDRState = HIGH;

  }

  }

  else 

  {

  digitalWrite(ledLDRPin, LOW);    // turn LED OFF

  if (LDRState == HIGH){

  Serial.println("Day Light OFF!");

  LDRState = LOW;

  }

  }

  }
